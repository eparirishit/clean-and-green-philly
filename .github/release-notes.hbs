Release Notes for Version
{{version}}
{{#if date}}
  {{date}}
{{/if}}

{{#if commits}}
  {{! Iterate over commit groups }}
  {{#each commitGroups}}
    {{#if commits}}
      {{! Breaking Changes Section }}
      {{#if (eq title 'BREAKING CHANGE')}}
        ## 💥 Breaking Changes
        {{#each commits}}
          * **BREAKING**:
          {{subject}}
          by @{{author}}{{#if pull}} in {{pull.url}}{{/if}}
        {{/each}}
      {{/if}}
    {{/if}}
  {{/each}}

  {{! Features, Fixes, Reverts & Performance Section }}
  {{#each commitGroups}}
    {{#if commits}}
      {{#if
        (or
          (eq title 'feat')
          (eq title 'fix')
          (eq title 'revert')
          (eq title 'perf')
        )
      }}
        ## 🚀 Features, Fixes & Performance
        {{#each commits}}
          {{#if (eq type 'feat')}}
            * ✨
            {{subject}}
            by @{{author}}{{#if pull}} in {{pull.url}}{{/if}}
          {{/if}}
          {{#if (eq type 'fix')}}
            * 🐛
            {{subject}}
            by @{{author}}{{#if pull}} in {{pull.url}}{{/if}}
          {{/if}}
          {{#if (eq type 'revert')}}
            * ⏪️
            {{subject}}
            by @{{author}}{{#if pull}} in {{pull.url}}{{/if}}
          {{/if}}
          {{#if (eq type 'perf')}}
            * ⚡️
            {{subject}}
            by @{{author}}{{#if pull}} in {{pull.url}}{{/if}}
          {{/if}}
        {{/each}}
      {{/if}}
    {{/if}}
  {{/each}}

  {{! Other Changes Section: Commits not in the above types }}
  ## 🔨 Other Changes
  {{#each commits}}
    {{#unless
      (or (eq type 'feat') (eq type 'fix') (eq type 'revert') (eq type 'perf'))
    }}
      {{#unless breaking}}
        *
        {{subject}}
        by @{{author}}{{#if pull}} in {{pull.url}}{{/if}}
      {{/unless}}
    {{/unless}}
  {{/each}}
{{/if}}

## 👥 Contributors

{{#if @root.newContributors.length}}
  ### ✨ New Contributors
  {{#each @root.newContributors}}
    * @{{this}}
    🎉
  {{/each}}
{{/if}}

{{#if @root.existingContributors.length}}
  ### 🙏 Existing Contributors
  {{#each @root.existingContributors}}
    * @{{this}}
  {{/each}}
{{/if}}

{{#if compareUrl}}
  📄 Full Changelog:
  {{compareUrl}}
{{/if}}