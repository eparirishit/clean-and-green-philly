{
  "branches": [
    "main"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "writerOpts": {
          "headerPartial": "./.github/release-notes.hbs",
          "commitGroupsSort": "title",
          "commitPartial": "- {{#if scope}}**{{scope}}:** {{/if}}{{message}} ([#{{id}}]({{commitUrl}}) by @{{author}})",
          "groupBy": "type",
          "commitGroups": [
            {
              "title": "ğŸš€ Features",
              "commits": "feat"
            },
            {
              "title": "ğŸ› Bug Fixes",
              "commits": "fix"
            },
            {
              "title": "ğŸ› ï¸ Refactoring",
              "commits": "refactor"
            },
            {
              "title": "ğŸ“„ Documentation Updates",
              "commits": "docs"
            },
            {
              "title": "ğŸš¨ Breaking Changes",
              "commits": "BREAKING CHANGE"
            }
          ],
          "transform": "function (commit, context) { return commit; }"
        }
      }
    ],
    "@semantic-release/changelog",
    "@semantic-release/github"
  ]
}
